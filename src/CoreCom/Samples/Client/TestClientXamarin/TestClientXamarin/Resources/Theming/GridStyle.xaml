<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="SharedStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style  TargetType="Grid" ApplyToDerivedTypes="True">
        <Setter Property="Margin" Value="2" />
        <Setter Property="RowSpacing" Value="5" />
         <Setter Property="Padding" Value="2" />
        
    </Style>
   
    <Style  x:Key="pageGridStyleNoLeftRightMargin" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource NoMargin}" />
         <Setter Property="RowSpacing" Value="5" />
         <Setter Property="Padding" Value="2" />
    </Style>
    
    <Style  x:Key="pageGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource PageMargin}" />
         <Setter Property="RowSpacing" Value="5" />
         <Setter Property="Padding" Value="2" />
    </Style>
    
   
   

</ResourceDictionary>